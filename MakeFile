cFiles = "src\ConsoleUtils\**.c"
flags = -g3
cFlags = ${flags} -std=c17
c++Flags = ${flags} -std=c++17

default:
	@echo Expected "C" or "C++" or "all"

C: build-obj build-C cleanup

C++: build-obj build-C++ cleanup

all: build-obj build-C build-C++ cleanup


build-obj:
	gcc ${cFlags} -c ${cFiles} -o "test\ConsoleUtils.obj"

build-C:
	gcc ${cFlags} -c -I "src\ConsoleUtils" "test\C\Test.c" -o "test\Test.obj"
	gcc "test\*.obj" -o "test\C\Test.exe"

build-C++:
	g++ ${c++Flags} -c -I "src\ConsoleUtils" "test\C++\Test.cpp" -o "test\Test.obj"
	g++ "test\*.obj" -o "test\C++\Test.exe"

cleanup:
	del "test\*.obj"
